color: 0x10407,
shininess: 350.00,
waveHeight: 40.50,
waveSpeed: 0.5,
zoom: 20.00
})
}
// Timer
function setBlackFridayTimer() {
var timer;

var compareDate = new Date(2024, 10, 20, 10, 0o0, 0o0);

timer = setInterval(function () {
timeBetweenDates(compareDate);
}, 1000);

function timeBetweenDates(toDate) {
var dateEntered = toDate;
var now = new Date();
var difference = dateEntered.getTime() - now.getTime();

if (difference <= 0) {
clearInterval(timer);

} else {

var seconds = Math.floor(difference / 1000);
var minutes = Math.floor(seconds / 60);
var hours = Math.floor(minutes / 60);
var days = Math.floor(hours / 24);

hours %= 24;
minutes %= 60;
seconds %= 60;

$("#sale_timer_days").text(days);
$("#sale_timer_hours").text(hours);
$("#sale_timer_minutes").text(minutes);
$("#sale_timer_seconds").text(seconds);
}
}
}

pushVanta()
pushConfetti()
setBlackFridayTimer()
})
