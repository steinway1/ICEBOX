{% set black_friday = true %}
{% set userIsAdmin = true %}

<!DOCTYPE html>
<html lang="en">


	<head>
		{% include '../page-components/head.twig' %}
		{{ block('include_head') }}
	</head>


	<body>
		{% if pageBanner == true and not black_friday == true %}
			{% include "../elements/page-banner.twig" %}
		{% endif %}
		{% include "../elements/header.twig" %}


		<main {% if mainClass is defined %} class="{{mainClass}}" {% endif %}> {% block content %}{% endblock %}

			{% if logged %}
