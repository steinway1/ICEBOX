{% set THEME_ASSETS_FOLDER = './assets' %}
<!DOCTYPE html>
<html lang="en">
  <head>
    {% include 'page-components/admin-head.twig' %}
    {{ block('include_head') }}
  </head>

  <body class="space {% if bodyClass is defined %} {{ bodyClass }} {% endif %}">
    <main {{ mainClass is defined ? 'class="space__main ' ~ mainClass ~ '"' : 'class="space__main"' }}>
      {% include 'admin/components/space/space-sidebar.twig' %}
      {% block content %}

      {% endblock %}
    </main>
  </body>
  {% include 'page-components/scripts_admin.twig' %}
  {{ block('include_script') }}
</html>
