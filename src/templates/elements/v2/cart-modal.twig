<div class="cart-modal">
	<div class="cart-modal__container">
		<div class="cart-modal__wrapper">
			<div class="cart-modal__header">
				<h5 class="cart-modal__heading">Shopping Cart
					{% if cart_items > 0 %}
						<span>({{cart_items}})</span>
					{% endif %}
				</h5>
				<div data-evt="toggleCart" class="cart-modal__close-btn">
					{% include "components/svg/close.svg" with {width: 12, height: 12} %}
				</div>

			</div>
			<div class="cart-modal__scrollable">
				<div class="cart-modal__rows-wrap {% if cart_items == 0 %} is-empty{% endif %}">

					<div class="cart-row">
						<div class="cart-row__wrapper bag_inner">
							{% if cart_items > 0 %}
								{% for item in cart.items %}
									{% include "components/cart/cart-item.twig" with {
										key:item.key,
										imgSrc: item.imgSrc,
										name: item.name,
										href: item.href,
										options: item.options,
										notice: item.notice,
										price: item.price,
										salePrice: item.salePrice
									} %}
								{% endfor %}
							{% else %}
								<div class="cart-modal__empty-wrap">
									<span>Your Cart Is Empty.<span>Add more diamonds to your life!</span>
									</span>
									<a href="/" class="cart-modal__link">
										<span>Start Shopping</span>
										{% include "components/svg/arrow-next.svg" %}
									</a>
								</div>
							{% endif %}
						</div>
					</div>

					{% if cart_items > 0 %}
						<div class="cart-row --total">
							<div class="cart-row__wrapper">
								<div class="cart-modal__summary-wrap">
									<div class="cart-modal__summary-price">
										<span>Original</span>
										<span>{{ cart.original_total}}</span>
									</div>

									<div class="cart-modal__summary-price is-discount">
										<span>Discount</span>
										<span>-
											{{cart.total_discount}}</span>
									</div>
									<div class="cart-modal__summary-price">
										<span>Delivery Charge</span>
										<span>On Checkout</span>
									</div>
									<div class="cart-modal__summary-price mybag-summary-price_total">
										<span>Total</span>
										<span class="cart-modal__total-price" id="mini-cart-total">{{ cart.soft_total}}</span>
									</div>
								</div>
							</div>
						</div>
					{% endif %}

				</div>
			</div>
			<div class="cart-modal__footer">
				<a href="/cart" class="cart-modal__btn">Go To Checkout</a>
			</div>
		</div>
	</div>
</div>
