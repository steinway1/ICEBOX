{% if not section.special_type == true %}
	<section class="hero-section{% if section.minimal == true %} hero-section_min{% endif %}">
		<div class="hero-section__media">
			<div class="hero-banner">
				<img src="{{THEME_ASSETS_FOLDER}}hero_{{section.banner}}.webp" loading="eager" alt="" class="hero-banner__pic">
				<a href="{{section.href}}" class="hero-banner_overlay"></a>
			</div>
			<div class="hero-banner__summary">
				<h2 class="hero-title">{{section.title}}</h2>
				<p class="hero-subtitle">{{section.banner_text}}</p>
				<div class="hero-controls">
					<a href="{{section.href}}" class="hero-banner__btn">
						<span>Shop Now</span>
						{% include "components/svg/arrow-next.svg" %}
					</a>
				</div>
			</div>
		</div>

		{% if section.grid == true %}
			<div class="hero-cards-wrap">
				<div class="hero-cards-grid">
					{% for item in trending_items|slice(0, 9) %}
						{% include "elements/product-card.twig", with {
          splideClass: false,
          productItem: item,
          disableZoom: false
          } %}
					{% endfor %}
				</div>
			</div>
		{% endif %}

		{% if section.slider == true %}
			<div class="splide hero_splide">
				<div class="splide__track">
					<div class="splide__list">
						{% for item in trending_items %}
							{% include "elements/product-card.twig", with {
          splideClass: true,
          productItem: item,
          disableZoom: false
          } %}
						{% endfor %}
					</div>
				</div>
			</div>
		{% endif %}

		{% if not section.static == true and not section.minimal == true %}
			<div class="hero-btn-wrap">
				<a href="{{section.href}}" class="hero-btn">Shop All</a>
			</div>
		{% endif %}
	</section>
{% else %}
	{# Diamond Shape #}
	{% if section.type == 'diamond_shapes' and section.include == true %}
		<section class="hero-section diamond_shapes">
			<div class="hero-header">
				<h2 class="hero-title">{{section.title}}</h2>
				<p class="hero-subtitle">{{section.subtitle}}</p>
			</div>
			<div class="hero-cards-wrap">
				<div class="hero-cards-grid">
					{% include "components/hero-diamond-cards.twig" %}
				</div>
			</div>
		</section>
	{% endif %}
{% endif %}
