<div class="sale-history-modal">
	<div data-evt="closeSalesModal" class="sale-history__backdrop"></div>
	<div class="sale-history__container">
		<button data-evt="closeSalesModal">
			<svg width="18" height="18" viewbox="0 0 27 27" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M1.5 1.5L25.5 25.5" stroke="currentColor" stroke-width="2.5"></path>
				<path d="M25.5 1.5L1.5 25.5" stroke="currentColor" stroke-width="2.5"></path>
			</svg>
		</button>

		<h2>Sales History</h2>
		<table>
			<thead>
				<tr>
					<th>Date</th>
					<th>Order #</th>
					<th>Price</th>
					<th>Color</th>
					<th>Tracking #</th>
					<th>Days</th>
				</tr>
			</thead>
			<tbody>
				{% for sale in product.sales %}
					<tr>
						<td>{{sale.date}}</td>
						<td>{{sale.order}}</td>
						<td>${{sale.price}}</td>
						<td>{{sale.color}}</td>
						<td>{{sale.tracking}}</td>
						<td>{{sale.days}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
