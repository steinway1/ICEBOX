<div id="gallery_desktop" class="product__media">
	{% if black_friday and product.item.discountRate is defined %}
		<div class="bf-badge">
			<span>BLACK FRIDAY SALE</span>
		</div>
	{% endif %}

	{% if (cyber_monday or cyber_week) and product.item.discountRate is defined %}
		<div class="cm-badge">
			<span>CYBER {{cyber_monday ? 'MONDAY' : 'WEEK'}}</span>
		</div>
	{% endif %}
	{% for media in product.media %}
		<div class="product__gallery Poster-{{ media.color }}">
			<div class="product__thumb-gallery">
				{% for item in media.elements %}
					{% include "elements/product-page/product-media.twig" , with { 
                  type: item.type, 
                  imgSrc: item.src, 
                  alt: item.alt, 
                  zoom:item.zoom_class, 
                  splide: false } %}
				{% endfor %}
			</div>
			<div class="product__main-gallery">
				<div class="product__main-gallery-wrapper">
					{% for item in media.elements %}
						{% include "elements/product-page/product-media.twig" , with { 
                  type: item.type, 
                  imgSrc: item.src, 
                  alt: item.alt, 
                  zoom:item.zoom_class, 
                  splide: false } %}
					{% endfor %}
				</div>
			</div>
		</div>
	{% endfor %}
</div>
