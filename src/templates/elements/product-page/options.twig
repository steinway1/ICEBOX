{% set gold_color_option = null %}
{% set other_options = [] %}

{% for option in product.options %}
	{% if option.type == 'goldColor' %}
		{% set gold_color_option = option %}
	{% else %}
		{% set other_options = other_options | merge([option]) %}
	{% endif %}
{% endfor %}

{% if gold_color_option %}
	{% include "elements/product-page/custom-fields/gold-color.twig", with { option: gold_color_option } %}
{% endif %}

{% for option in other_options %}
	{% include 'elements/product-page/custom-fields/' ~ option.type ~ '.twig' %}
{% endfor %}
