<div id="{{option.id}}" class="product__item-option --static">
    <div class="product-option__head">
        <div class="product-option-name">{{option.name}}</div>
        <div class="product-option__head-right">
            <div class="product-option__dd-icon">
                {% include "elements/product-page/svg/dropdown.svg" %}
            </div>
        </div>
    </div>
    <div class="product-option__body">
        <div class="product-option__wrapper">
            <input type="text" id="custom_tags_{{option.id}}"  name="customInputNew[field][{{option.id}}]"
                    {% if option.min_letters is defined %}
                        data-min="{{ option.min_letters }}"
                    {% else %}
                        data-min="1"
                    {% endif %}

                    {% if option.max_letters is defined %}
                        data-max="{{ option.max_letters }}"
                    {% endif %}
                   class="option-letters-input custom-fields-fetch {{ option.class }} --textarea"  data-type="tags" data-action="" data-name="TYPE YOUR LETTERS" placeholder="Type Your Letters">
        </div>
    </div>
</div>