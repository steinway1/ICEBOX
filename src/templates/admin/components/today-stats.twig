<div class="am-today__side">
	<div class="am-side-box">
		<div class="am-side-box__row">
			<div class="am-side-box__stat">
				<div class="am-side-box__icon">
					{% include "admin/svg/icon_wallet.svg" %}
				</div>
				<div class="stat-content">
					<span class="am-side-box__title">Earned Today</span>
					<span class="am-side-box__typo is-green">${{stats.earned}} USD</span>
				</div>
			</div>
		</div>
		<div class="am-side-box__row">
			<div class="am-side-box__stat">
				<div class="am-side-box__icon">
					{% include "admin/svg/icon_bag.svg" %}
				</div>
				<div class="stat-content">
					<span class="am-side-box__title">Total Order</span>
					<span class="am-side-box__typo">{{stats.totalOrders}} Orders</span>
				</div>
			</div>
		</div>
		<div class="am-side-box__row">
			<div class="am-side-box__stat">
				<div class="am-side-box__icon">
					{% include "admin/svg/icon_dollar.svg" %}
				</div>
				<div class="stat-content">
					<span class="am-side-box__title">Average Order</span>
					<span class="am-side-box__typo">${{stats.avgOrder}} USD</span>
				</div>
			</div>
		</div>
	</div>
</div>
