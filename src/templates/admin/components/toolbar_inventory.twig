<div class="toolbar">
	<div class="toolbar__wrapper">
		<div class="toolbar__container">
			<div class="toolbar-menu">

				<div
					class="toolbar-menu__wrapper">

					{# LEADERBOARD #}
					<div id="toolbarPoints" class="toolbar-content">
						<div class="toolbar-form">
							{% for user in users %}
								<div class="pts-menu__user">
									<div class="pts-menu__info-group">
										<div class="pts-menu__user-emblem">
											<span>{{loop.index}}</span>
										</div>
										<span class="pts-menu__user-name">{{user.full_name}}</span>
									</div>
									<div class="pts-menu__score-group">
										<span>{{user.pts}}
											PTS</span>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>

					{# COLLECTIONS #}
					<div id="toolbarCollections" class="toolbar-content">
						<div class="toolbar-form">
							<label class="--sticky-top --z-10">
								<input type="radio" value="new" name="collection" checked/>
								<div>
									<span>New Collection</span>
									<span></span>
								</div>
							</label>
							{% for collection in collections %}
								<label>
									<input type="radio" value="{{collection.value}}" name="collection"/>
									<div>
										<span>{{collection.name}}</span>
										<span></span>
									</div>
								</label>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>

			<div class="toolbar__btn-group">
				<button data-evt="togglePoints" class="toolbar-btn">
					<div data-lottie="diamondSpin"></div>
					<span>
						<span data-id="pts">{{user.pts}}</span>
						POINTS</span>
				</button>
				<button data-evt="toggleCollections" class="toolbar-btn">
					<span>New Collection</span>
				</button>
				<button data-evt="addToCollecton" class="toolbar-btn --disactive">
					<span>Add Bulk To Collection</span>
				</button>
			</div>
		</div>
	</div>
</div>
