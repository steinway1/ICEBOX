<div class="am-content">
	<div
		class="am-content__wrapper">

		<!-- #region Content : Header -->
		<div class="am-main__header for_today">
			<div class="am-container">
				<div class="am-row__header-wrapper">
					<div class="am-row__header">
						<div class="am_vertical-start">
							<h2 class="am-main__header-title">Invoices List
							</h2>
							<div class="am-main__subtitle">
								<span>All invoices</span>
							</div>
						</div>
					</div>

					<div class="blank-search --dim">
						<div class="blank-search__input-wrap">
							{% include "admin/svg/icon_search.svg" %}
							<input type="text" placeholder="Search invoice...">
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- #endregion -->


		<!-- #region Content : Main -->
		<div class="am-main__flow">
			<div class="am-container">
				<div class="am-main__content">
					<div class="am-main__orders">

						<div class="am-content-divider">{{invoices|length}}
							invoices total<span></span>
						</div>

						<div class="pos-thumbs-grid">
							{% for invoice in invoices %}
								{% include "admin/components/pos-thumb.twig" %}
							{% endfor %}
						</div>

					</div>
				</div>
			</div>
		</div>
		<!-- #endregion -->

	</div>
</div>
