<meta charset="UTF-8">
<title>
	{% if page_title is defined %}
		{{page_title}}
	{% else %}
		{{page_default_title}}
	{% endif %}
</title>

<meta name="description" content="{% if page_description is defined %}{{page_description}}{% else %}{{page_default_description}}{% endif %}">
<meta name="keywords" content="{% if page_default_keywords %}{{page_default_keywords}}{% else %}{% endif %}">
<meta name="robots" content="index follow">

<link rel="preload"
      href="./assets/fonts/TSans.woff2"
      as="font"
      type="font/woff2"
      crossorigin>

<link rel="stylesheet" href="css/base.css">
<link rel="preload" as="style" href="css/partial.css" onload="this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="css/partial.css"></noscript>

{% if xmas == true %}
	<link rel="stylesheet" href="css/promo/xmas/2024.css"/>
{% endif %}

<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no"/>
<meta name="theme-color" content="#ffffff">
<meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)">
<meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: dark)">

{% if black_friday %}
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
{% endif %}

{% if vday == true %}
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Staatliches:regular" media="all">
{% endif %}

{% if xmas == true %}
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
{% endif %}

{% if new_year == true %}
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
{% endif %}

<meta property="og:image" content="{{THEME_ASSETS_FOLDER}}open-graph.jpeg">
<meta property="og:image:type" content="image/jpeg">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">

