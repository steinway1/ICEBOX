<section id="checkoutContactsBlock" class="checkout-block">
	<form method="post" action="/checkout-step2" id="checkoutFrm">
		<div class="checkout-box">
			<div class="checkout-box__header">
				<div class="checkout-box__header-wrap">
					<h3 class="checkout-heading">Contact Information</h3>
					<div class="checkout-box__header-controls">
						<button type="button" class="checkout-box__edit-btn">Edit</button>
					</div>
				</div>
			</div>
			<div class="checkout-box__content">
				<div class="checkout-form-wrap">
					<div class="checkout-form__input-row">
						<div class="checkout-form__input-grid">

							<div class="checkout-form__input-wrap">
								<label for="email" class="checkout-form__input-label">Email Address</label>
								<input type="email" class="checkout-form__input" id="email" name="email" required="">
								<span id="checkoutEmailError" class="checkout-form__err-msg">Error Message</span>
							</div>

							<div class="checkout-form__input-wrap">
								<label for="checkoutTel" class="checkout-form__input-label">Phone Number</label>
								<input data-input="tel" type="tel" class="checkout-form__input tel-input">
								<span id="checkoutTelError" class="checkout-form__err-msg">Error Message</span>
							</div>

						</div>
					</div>
					<div class="checkout-form__input-row">
						<div class="checkout-form__input-grid full-width">
							<div class="checkout-form__input-wrap">
								<label for="instagramField" class="checkout-form__input-label">Instagram Account<span>OPTIONAL</span>
								</label>
								<input type="text" class="checkout-form__input" name="instagram" id="instagramField">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="checkout-box">
			<div class="checkout-box__header">
				<h3 class="checkout-heading">Delivery Address</h3>
			</div>
			<div class="checkout-box__content">
				<div class="checkout-form-wrap">
        
					<div class="checkout-form__input-row">
						<div class="checkout-form__input-grid">
							<div class="checkout-form__input-wrap">
								<label for="first_name" class="checkout-form__input-label">First Name</label>
								<input type="text" class="checkout-form__input" name="first_name" id="firstName" pattern="[a-zA-Z][a-zA-Z\s]*" required="">
								<span class="checkout-form__err-msg">Something Went Wrong. Try Again</span>
							</div>
							<div class="checkout-form__input-wrap">
								<label for="checkoutSurname" class="checkout-form__input-label">Last Name</label>
								<input type="text" class="checkout-form__input" name="last_name" id="lastName" pattern="[a-zA-Z][a-zA-Z\s]*" required="">
								<span class="checkout-form__err-msg">Something Went Wrong. Try Again</span>
							</div>
						</div>
					</div>

					<div class="checkout-form__input-row">
						<div class="checkout-form__input-grid">

							<div class="checkout-form__input-wrap">
								<label for="address" class="checkout-form__input-label">Address</label>
								<input type="text" class="checkout-form__input pac-target-input" name="address" id="address" required="" placeholder="Enter a location" autocomplete="off">
								<span class="checkout-form__err-msg">Something Went Wrong. Try Again</span>
							</div>

							<div class="checkout-form__input-wrap">
								<label for="address2" class="checkout-form__input-label">Apartment, suite, etc</label>
								<input type="text" class="checkout-form__input" name="address2" id="addressDetails">
								<span class="checkout-form__err-msg">Something Went Wrong. Try Again</span>
							</div>

						</div>
					</div>
					<div class="checkout-form__input-row">
						<div class="checkout-form__input-grid">

							<div class="checkout-form__input-wrap">
								<label for="country" class="checkout-form__input-label">Country</label>
								<div class="checkout-form__select-wrap">
									<select name="country" id="country" class="checkout-form__input  crs-country" data-default-value="USA" data-region-id="state" onchange="CheckDestination();" required="" data-crs-loaded="true">
										<option value="no">Select country</option>
									</select>
									<span class="checkout-form__select-icon"></span>
								</div>
								<span class="checkout-form__err-msg">Something Went Wrong. Try Again</span>
							</div>

							<div class="checkout-form__input-wrap">
								<label for="state" class="checkout-form__input-label">Region</label>
								<div class="checkout-form__select-wrap">
									<select name="state" id="state" data-default-value="Georgia" class="checkout-form__input to-select" required="">
										<option value="">-</option>
									</select>
									<span class="checkout-form__select-icon"></span>
								</div>
								<span class="checkout-form__err-msg">Something Went Wrong. Try Again</span>
							</div>

						</div>
					</div>
					<div class="checkout-form__input-row">
						<div class="checkout-form__input-grid">
            
							<div class="checkout-form__input-wrap">
								<label for="city" class="checkout-form__input-label">City</label>
								<input type="text" class="checkout-form__input" id="city" name="city" value="Atlanta" required="">
								<span class="checkout-form__err-msg">Something Went Wrong. Try Again</span>
							</div>

							<div class="checkout-form__input-wrap">
								<label for="postalCode" class="checkout-form__input-label">Zip Code</label>
								<input type="text" class="checkout-form__input pac-target-input" value="30305" name="zip" id="postalCode" required="" placeholder="Enter a location" autocomplete="off">
								<span class="checkout-form__err-msg">Something Went Wrong. Try Again</span>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="checkout-block__footer">
			<button class="checkout__main-btn">Continue To Delivery</button>
		</div>
	</form>
</section>
