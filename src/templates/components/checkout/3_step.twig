<div
	class="checkout-flow">

	{# -- DONE : Contacts #}
	<div class="checkout-step --filled">
		<div class="checkout-step__wrapper">
			<div class="checkout-step__header">
				<h2 class="checkout-step__title">Contact Details</h2>
				<a href="/checkout" class="checkout-box__edit-btn">Edit</a>
			</div>
			<div class="checkout-step__summary">
				<span>{{ shipping_address.email }}</span>
				<span>{{ shipping_address.phone }}</span>
			</div>
		</div>
	</div>

	{# -- DONE : Shipping Method #}
	<div class="checkout-step --filled">
		<div class="checkout-step__wrapper">
			<div class="checkout-step__header">
				<h2 class="checkout-step__title">Shipping Method</h2>
				<a href="/checkout-step2" class="checkout-box__edit-btn">Edit</a>
			</div>
			<div class="checkout-step__summary">
				<span>{{selected_method}}</span>
				<span>
					{{ shipping_address.address1 }}
					{{ shipping_address.address2 }}</span>
				<span>
					{{shipping_address.city}},
					{{shipping_address.state}}
					{{ shipping_address.zip_code }}
					{{ shipping_address.country }}</span>
			</div>
		</div>
	</div>

	{# Payment Method #}
	<div class="checkout-step">
		<div class="checkout-step__wrapper">
			<div class="checkout-step__header">
				<h2 class="checkout-step__title">Payment Method</h2>
				<span class="checkout__secure-typo">Totally Secure Payment</span>
			</div>
			<div class="checkout-step__body">
				<div class="checkout-step__flow">
					<div
						class="checkout-multiselect">

						{# Visa / Mastercard #}
						{% if cart.payments.credit_cards %}
							<label for="gateway_card" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_card" value="stripe" name="gateway" checked>
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>Credit / Debit Card</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-visa.svg" alt="VISA" class="checkout__pay-img">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-mastercard.svg" alt="Mastercard" class="checkout__pay-img">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">After clicking “Complete order”, you will be redirected to complete your purchase securely.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}
									</span>
								</div>
							</label>
						{% endif %}

						{# GPay / Apple Pay #}
						{% if cart.payments.credit_cards %}
							<label for="gateway_gpay" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_gpay" value="stripe" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>Google Pay / Apple Pay</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-gpay.svg" alt="GPay" class="checkout__pay-img">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-apple.svg" alt="Apple Pay" class="checkout__pay-img">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">After clicking “Complete order”, you will be redirected to complete your purchase securely.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}
									</span>
								</div>
							</label>
						{% endif %}

						{# Affirm #}
						{% if cart.payments.affirm %}
							<label for="gateway_affirm" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_affirm" value="affirm" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>Affirm</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-affirm.svg" alt="Affirm" class="checkout__pay-img">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">After clicking “Complete order”, you will be redirected to complete your purchase securely.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}
									</span>
									<div class="checkout-form__pay-details">
										<div id="affirm-message"></div>
									</div>
								</div>
							</label>
						{% endif %}

						{# Klarna #}
						{% if cart.payments.klarna %}
							<label for="gateway_klarna" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_klarna" value="klarna" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>Klarna</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/checkout_klarna.svg" alt="Klarna" class="checkout__pay-img">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">After clicking "Complete order", you will be redirected to complete your purchase securely.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}
									</span>
									<div class="checkout-form__pay-details">
										<div id="klarna-message"></div>
									</div>
								</div>
							</label>
						{% endif %}

						{# Afterpay #}
						{% if cart.payments.afterpay %}
							<label for="gateway_afterpay" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_afterpay" value="afterpay" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>Afterpay</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/checkout_afterpay.svg" alt="Afterpay" class="checkout__pay-img --lg">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">After clicking "Complete order", you will be redirected to complete your purchase securely.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}
									</span>
									<div class="checkout-form__pay-details">
										<div id="afterpay-message"></div>
									</div>
								</div>
							</label>
						{% endif %}

						{# BitPay #}
						{% if cart.payments.bitpay %}
							<label for="gateway_bitpay" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_bitpay" value="bitpay" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>BitPay</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-bitpay.svg" alt="BitPay" class="checkout__pay-img">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">After clicking "Complete order", you will be redirected to complete your purchase securely.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}</span>
									<div class="checkout-form__pay-details">
										<div id="bitpay-message"></div>
									</div>
								</div>
							</label>
						{% endif %}

						{# USDT ERC20 #}
						{% if cart.payments.usdt_erc20 %}
							<label for="gateway_usdt_erc20" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_usdt_erc20" value="usdt erc20" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>USDT ERC20</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-usdt.svg" alt="USDT" class="checkout__pay-img">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">Transfer the cryptocurrency directly to us and send us a screenshot on WhatsApp.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}</span>
									<div data-copy-address data-crypto-address="0xc3d6cb5d8f1f2510f4512d00a5a3423BBC1EA5e6" class="checkout__crypto-address">
										<span>0xc3d6cb5d8f1f2510f4512d00a5a3423BBC1EA5e6</span>
									</div>
									<div class="checkout__crypto-controls">
										<a href="javascript:void(0)" data-copy-address>Copy Address</a>
										<a href="/chat-whatsapp" target="_blank" class="--wa">WhatsApp</a>
									</div>
								</div>
							</label>
						{% endif %}

						{# USDT TRX #}
						{% if cart.payments.usdt_trx %}
							<label for="gateway_usdt_trx" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_usdt_trx" value="usdt trx" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>USDT TRX</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-usdt.svg" alt="USDT" class="checkout__pay-img">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">Transfer the cryptocurrency directly to us and send us a screenshot on WhatsApp.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}</span>
									<div data-copy-address data-crypto-address="TNxdBaTSdhFjz7WLvDpWWiCS49uXWb58XY" class="checkout__crypto-address">
										<span>TNxdBaTSdhFjz7WLvDpWWiCS49uXWb58XY</span>
									</div>
									<div class="checkout__crypto-controls">
										<a href="javascript:void(0)" data-copy-address>Copy Address</a>
										<a href="/chat-whatsapp" target="_blank" class="--wa">WhatsApp</a>
									</div>
								</div>
							</label>
						{% endif %}

						{# Ethereum ERC20 #}
						{% if cart.payments.etherium %}
							<label for="gateway_eth" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_eth" value="etherium" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>Etherium ERC20</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-eth.svg" alt="ETH" class="checkout__pay-img">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">Transfer the cryptocurrency directly to us and send us a screenshot on WhatsApp.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}</span>
									<div data-copy-address data-crypto-address="0xc3d6cb5d8f1f2510f4512d00a5a3423BBC1EA5e6" class="checkout__crypto-address">
										<span>0xc3d6cb5d8f1f2510f4512d00a5a3423BBC1EA5e6</span>
									</div>
									<div class="checkout__crypto-controls">
										<a href="javascript:void(0)" data-copy-address>Copy Address</a>
										<a href="/chat-whatsapp" target="_blank" class="--wa">WhatsApp</a>
									</div>
								</div>
							</label>
						{% endif %}

						{# Bitcoin #}
						{% if cart.payments.bitcoin %}
							<label for="gateway_btc" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_btc" value="bitcoin" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>Bitcoin</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-bitcoin.svg" alt="BTC" class="checkout__pay-img --lg">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">Transfer the cryptocurrency directly to us and send us a screenshot on WhatsApp.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}</span>
									<div data-copy-address data-crypto-address="bc1qrhx0f0kemvshwynejuffamxsp8qwwh9kvk0w03" class="checkout__crypto-address">
										<span>bc1qrhx0f0kemvshwynejuffamxsp8qwwh9kvk0w03</span>
									</div>
									<div class="checkout__crypto-controls">
										<a href="javascript:void(0)" data-copy-address>Copy Address</a>
										<a href="/chat-whatsapp" target="_blank" class="--wa">WhatsApp</a>
									</div>
								</div>
							</label>
						{% endif %}

						{# PayPal #}
						{% if cart.payments.paypal %}
							<label for="gateway_paypal" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_paypal" value="paypal" name="gateway">
								<div class="checkout__pseudo-cb-box --xs-pd">
									<div class="flex">
										<span class="checkout__pseudo-cb-dot"></span>
										<h5>PayPal</h5>
									</div>
									<div class="flex">
										<img src="{{ THEME_ASSETS_FOLDER }}checkout/check_pay-paypal.svg" alt="PayPal" class="checkout__pay-img --lg">
									</div>
								</div>
								<div class="checkout__pseudo-cb-drop">
									<span class="checkout__payment-typo">After clicking "Complete order", you will be redirected to complete your purchase securely.</span>
									<span class="checkout__payment-price">Total
										{{ cart.total }}
									</span>
								</div>
							</label>
						{% endif %}

						{# Wire Transfer #}
						{% if cart.payments.wire_transfer %}
							<label for="gateway_wire" class="checkout__pseudo-cb">
								<input type="radio" id="gateway_wire" name="gateway" value="wire-transfer" {% if cart.default_payment_method == 'wire_transfer'%} checked {% endif %}>
								<div class="checkout__pseudo-cb-box --xs-pd">
