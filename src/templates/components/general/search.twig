<div class="ib-search">
	<div class="ib-search__scroller">
		<div class="ib-search__logo">
			<img width="130" height="38" src="{{THEME_ASSETS_FOLDER}}logo.svg" loading="eager" alt="Icebox logotype">
		</div>
		<div class="ib-search__input-row">
