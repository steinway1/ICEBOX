<form id="pop_frm_login" class="needs-validation" action="/json-authenticate" novalidate="" data-gtm-form-interact-id="0">

	<input type="hidden" name="csrf_token" value="">

	<div class="sign-modal__form-row">
		<label for="userEmail">Email Address</label>
		<input type="email" id="userEmail" autocorrect="off" spellcheck="false" required="">
	</div>

	<div class="sign-modal__form-row">
		<label for="userPassword">Password</label>
		<div class="sign-modal__pass-input-wrap">
			<input type="password" id="userPassword" name="password" autocorrect="off" spellcheck="false" data-parsley-id="7" data-gtm-form-interact-field-id="1">
			<div data-evt="togglePasswordVisible" class="sign-modal__pass-switch">
				<div class="sign-modal__pass-icon">
					{% include "../svg/open-eye.svg" %}
					{% include "../svg/close-eye.svg" %}
				</div>
			</div>
		</div>
	</div>

	<div class="sign-modal__form-row form-row_options">
		<label class="sign-modal__checkbox-label">
			<input id="subscribe" name="remember" type="checkbox" checked="" data-parsley-multiple="remember">
			<span>Keep me signed in</span>
		</label>
		<a href="javascript:void(0);" data-sign-switch="password" class="sign-modal__sub-link">Forgot password?</a>
	</div>

	<div class="sign-modal__form-row">
		<div class="sign-modal__button-wrap">
			<button class="sign-modal__main-btn js-submit">Login</button>
		</div>
		<button type="button" data-sign-switch="phone" class="sign-modal__sub-btn">Login With Phone No</button>
	</div>

</form>
