<div class="cart-item">
	<div class="cart-item__main">
		<div class="cart-item__media">
			<img src="{{imgSrc}}" loading="lazy">
		</div>
		<div class="cart-item__details">
			<span class="cart-item__category">{{category}}</span>
			<div class="cart-item__info-row">
				<div class="cart-item__title-group">
					<a href="{{href}}" target="_blank" class="cart-item-name">{{name}}</a>
				</div>
				<div class="cart-item__options-group">
					{% for option in options %}
						<div class="cart-item__option">
							<span>{{ option.name }}</span>:
							<span>{{ option.value | raw }}</span>
						</div>
					{% endfor %}
				</div>
			</div>

			<div class="cart-item__footer">
				<div class="cart-item__btn-group">
					<button class="cart-item__btn --wishlist{% if is_in_wishlist %} --active{% endif %}" {% if user %} onclick="addToWishlist({{key}});" {% else %} onclick="window.signModal.open()" {% endif %}></button>
					<button class="cart-item__btn --remove" onclick="removeItemFromCart({{ key }})"></button>
				</div>
				<div class="cart-item__price-row">
					<span class="cart-item-price">{{price}}</span>
					{% if salePrice %}
						<span class="cart-item-price_sale">{{salePrice}}</span>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
	{% if notice != '' %}
		<div class="cart-item__notice">
			{{notice | raw}}
		</div>
	{% endif %}
</div>
