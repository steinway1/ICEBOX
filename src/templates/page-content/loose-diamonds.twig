{# Sorting #}
<div class="loose__filters --static">
	<div class="wrapper">
		<div class="--flex_8">
			<div class="loan-input-wrap">
				<div class="loan-case__select-wrap">
					<select class="loan-case__input" name="loose_sort_price">
						<option value="" disabled selected>Sort By Price</option>
						<option value="high-low">Price High - Low</option>
						<option value="low-high">Price Low - High</option>
					</select>
				</div>
			</div>
			<div class="loan-input-wrap">
				<div class="loan-case__select-wrap">
					<select class="loan-case__input" name="loose_sort_price">
						<option value="" disabled selected>Sort By Size</option>
						<option value="high-low">Carat Weight High - Low</option>
						<option value="low-high">Carat Weight Low - High</option>
					</select>
