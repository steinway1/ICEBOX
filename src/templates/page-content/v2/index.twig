<!-- Settings:

  ***
  - heading: string - Required (No default)
  // Main heading in the banner

  ***
  - subheading: string - Required (No default)
  // Subheading in the banner

  ***
  - banner: string - Required (No default)
  // Banner image in the hero section

  ***
  - half_banner: boolean - Not Required (default = false)
  // If true, then the banner will be half height

  ***
  - alt: string - Required (No default)
  // Alt text for the banner

  ***
  - url: string - Required (No default)
  // Link to results page

  ***
  - link_text: string - Not Required (default = 'Shop Now')
  // Text for the link in the banner

  ***
  - button_text: string - Not Required (default = 'Shop All')
  // Text for the button in the bottom of the section

  ***
  - splide: boolean - Not Required (default = false)
  // If true, then the section will be splide slider

  ***
  - splide_type: string - Not Required (default = 'row')
  // 'row' or 'grid'
  // If splide_type = grid, then number of items must be divisible by 8

  ***
  - section_items: array - Required
  // Array of items in the section

  ***
  - max_items: number - Not Required (default = 8)
  // Maximum number of items in the section IF not splide

  ***
  - mobile_grid: boolean - Not Required (default = false)
  // Show product items as grid in mobile view
  // If mobile_grid is true, then number of items must be divisible by 4

  ***
  hide_footer: boolean - Not Required (default = false)
  If true, then button group in the bottom will be hidden

-->

