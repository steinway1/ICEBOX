{% set featured = blogs[0] %}

<div class="main_blog">
	<div class="blog__posts">
		<div class="blog__wrapper">
			<div class="blog__posts-grid">
				{% include "elements/blog-post.twig" with {
            article: featured
        } %}
				{% for blog in blogs %}
					{% include "elements/blog-post.twig" with {
                        article: blog
                    } %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>
