<div class="results-content">

	{% include "elements/promo/xmas/2024/results-banner.twig" %}

	<div class="results__wrap">
		<div class="results__main">

			{% include "elements/results/results-sub.twig" %}
			{% include "elements/results/page-filters.twig" %}
			{% include "elements/results/filter-modal.twig" %}
			{% include "elements/results/results-bar.twig" %}

			<div class="results-cards-content">
				<div class="wrapper">

					<div class="xmas-timer">
						<div class="xmas-timer__wrapper">
							<img loading="lazy" src="{{THEME_ASSETS_FOLDER}}promo/xmas/2024/timer-end.avif" alt="" class="xmas-timer__pic swing_5">
							<div class="xmas-timer__time">
								<div class="xmas-timer__col">
									<div data-xmas-timer="days" class="xmas-timer__typo">14</div>
									<div class="xmas-timer__sub-typo">DAYS</div>
								</div>
								<div class="xmas-timer__col">
									<div data-xmas-timer="hours" class="xmas-timer__typo">08</div>
									<div class="xmas-timer__sub-typo">HOURS</div>
								</div>
								<div class="xmas-timer__col">
									<div data-xmas-timer="minutes" class="xmas-timer__typo">46</div>
									<div class="xmas-timer__sub-typo">MIN</div>
								</div>
                <div class="xmas-timer__col">
                  <div data-xmas-timer="seconds" class="xmas-timer__typo">00</div>
                  <div class="xmas-timer__sub-typo">SEC</div>
                </div>
							</div>
						</div>
					</div>

					<div class="results__main-wrapper">
						<div class="results__items">
							<div class="cards-grid">
								{% for item in sale_items %}
									{% include "elements/product-card.twig" with {
                    productItem: item,
                    xmas: true
                  }%}
								{% endfor %}
							</div>
							{% if pages is defined %}
								{% if pages > 1 %}
									<div class="content-preloader">
										<span></span>
									</div>
								{% endif %}
							{% else  %}
								<div class="content-preloader">
									<span></span>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
